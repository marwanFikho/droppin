/* Dashboard Container */
.dashboard-container {
  display: flex;
  min-height: 100vh;
  position: relative; /* Ensure proper positioning context */
}

.dashboard-container .dashboard-sidebar {
  width: 260px !important;
  background: white !important;
  color: #1f2937 !important;
  padding: 0 !important;
  box-shadow: 4px 0 20px rgba(0, 0, 0, 0.15) !important;
  position: fixed !important;
  height: calc(100vh - 65px) !important; /* Adjust height to account for navigation */
  overflow-y: auto !important;
  z-index: 100 !important;
  top: 65px !important; /* Position sidebar below the fixed navigation */
  left: 0 !important;
  border-right: 1px solid #e5e7eb;
  contain: layout style; /* Isolate the sidebar's layout */
  transform: translateX(0); /* Show sidebar by default */
}

/* Mobile menu styles */
@media (max-width: 768px) {
  .dashboard-container .dashboard-sidebar {
    transform: translateX(-100%); /* Hide sidebar by default on mobile */
    position: fixed;
    z-index: 1000;
    transition: transform 0.3s ease;
  }
  
  .dashboard-container.menu-open .dashboard-sidebar {
    transform: translateX(0); /* Show sidebar when menu-open class is added */
  }
}

/* Mobile menu toggle button */
.menu-toggle-btn {
  display: none; /* Hidden by default, shown on mobile */
  position: fixed;
  top: 15px;
  left: 15px;
  z-index: 1001; /* Above sidebar */
  background: #FF6B00;
  color: white;
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 1.2rem;
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  display: none; /* Will be shown on mobile */
}

/* Dashboard Stats Container */
.dashboard-stats-container {
  display: flex;
  flex-direction: row;
  gap: 1rem;
  margin-bottom: 2rem;
}

/* Stats and Chart Row */
.stats-and-chart-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  align-items: start;
}

/* On smaller screens, stack these elements */
@media (max-width: 768px) {
  .stats-and-chart-row {
    grid-template-columns: 1fr; /* Stack vertically on mobile */
    gap: 0.8rem;
  }
}

/* Package Stats Row */
.dashboard-stats.package-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.5rem;
  /* background-color: #ffffff; */
  padding: 0.75rem;
  border-radius: 0;
  box-shadow: none;
  height: 180px; /* Fixed height to match chart */
}

/* On smaller screens, make package stats single column */
@media (max-width: 576px) {
  .dashboard-stats.package-stats {
    grid-template-columns: 1fr; /* Single column on very small screens */
    height: auto; /* Auto height to prevent overflow */
  }
}

/* Financial Stats Row */
.dashboard-stats.financial-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  background: white;
  padding: 1.5rem;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  border: 1px solid #e5e7eb;
}

/* On smaller screens, make financial stats single or two column */
@media (max-width: 768px) {
  .dashboard-stats.financial-stats {
    grid-template-columns: repeat(2, 1fr); /* Two columns on medium screens */
    padding: 1.2rem;
  }
}

